IN_GEN=$1
IN_SAMPLE=$2
IN_KEEP=$3 
OUT_FREQ=$4

TEMP_DIR=/scratch/local/mw_freq_temp
mkdir -p ${TEMP_DIR}

BASENAME_GEN=`basename ${IN_GEN}`
BASENAME_SAMPLE=`basename ${IN_SAMPLE}`

TEMP_GEN=${TEMP_DIR}/${BASENAME_GEN}.subset
TEMP_SAMPLE=${TEMP_DIR}/${BASENAME_SAMPLE}.subset

echo Run gtool
/opt/gtool/gtool -S \
	--g ${IN_GEN} \
	--s ${IN_SAMPLE} \
	--og ${TEMP_GEN} \
	--os ${TEMP_SAMPLE} \
	--sample_id ${IN_KEEP}

echo Run QC tool
/data/gwas/bin/qctool \
	-g ${TEMP_GEN} \
	-s ${TEMP_SAMPLE} \
	-os ${OUT_FREQ}

#echo Cleanup temp dir
#rm -rf ${TEMP_DIR}

